//- GOODS
.card
	transition all .3s ease
	background-color #FFF
	position relative
	&:hover
		-webkit-box-shadow 4px 3px 13px -1px rgba(196,196,196,1)
		-moz-box-shadow 4px 3px 13px -1px rgba(196,196,196,1)
		box-shadow 4px 3px 13px -1px rgba(196,196,196,1)
	&__img
		width 100%
		height 270px
		-webkit-background-size cover
		-o-background-size cover
		background-size cover
		background-position center
		background-repeat no-repeat
		display block
	&__art
		margin-bottom 10px
		span
			padding-left 4px
			font-weight bold
	&__title
		font-size 1.42rem
		margin-bottom 4px
		text-decoration none
		display block
		line-height 1.2
	&__price
		font-size 1.22rem
	&__desc
		margin-bottom 18px
	&__info
		padding 10px 8px 5px
	&__add
		text-decoration none
		text-align center
		display block
		padding 15px
		transition all .3s ease
		&:hover
			text-decoration underline
	&__buynow
		padding 13px
		background-color rgba(0, 0, 0, 0.66)
		color #FFF
		font-size 1.22rem
		text-align center
		cursor pointer
		position relative
		&:hover
			.card__block1
				opacity 0
				pointer-events none
			.card__block2
				opacity 1

	&__block1
		position absolute
		width 100%
		transition opacity .3s ease
		left 0
		font-size 1.28rem
		&:after
			content ""
			display block
			position absolute
			width 6px
			height 6px
			right 35px
			top 50%
			transform translateY(-50%) rotate(45deg)
			border-top 1px solid #fff
			border-right 1px solid #fff
	&__block2
		opacity 0
		transition opacity .3s ease
		display flex
		-webkit-justify-content center
		justify-content center
		-webkit-align-items center
		align-items center
	&__color
		width 24px
		height 24px
		background-position center
		background-repeat no-repeat
		-webkit-background-size cover
		-o-background-size cover
		background-size cover
		display block
		border-radius 50%
		margin 0 8px
		opacity 0.7
		position relative
		transition opacity .3s ease
		&:after
			content ""
			display block
			position absolute
			transition opacity .3s ease
			width 32px
			height 32px
			border 1px solid #fff
			border-radius 50%
			left -4px
			opacity 0
			top -4px
		&.active
			opacity 1
			&:after
				opacity 1
		&:hover
			opacity 1
			&:after
				opacity 1
	&__label
		position absolute
		top 10px
		right 10px
		color #FFF
		text-transform uppercase
		-webkit-border-radius 5px
		border-radius 5px
		padding 5px 10px
		&_best
			background-color #8A4E78
		&_new
			background-color #839950
		&_star
			padding 0
			span
				max-width 21px
				&.active
					svg
						fill #FFC700

.viev-more
	position absolute
	right 0
	bottom 6px
	text-decoration none
	transition opacity .3s ease
	font-size 1.14rem
	&:hover
		opacity 0.8

.main-goods
	.container
		position relative
	h2
		margin-bottom 25px
	&_bestsellers
		padding 54px 0 50px
	&_rating
		padding 62px 0 65px
		h2
			margin-bottom 20px
	&_new
		padding 66px 0 60px
		h2
			margin-bottom 20px
	.swiper-wrapper
		padding 10px 0
	.doogs-slider
		-ms-overflow-x hidden
		overflow-x hidden
.main-goods, .news
	&__top
		text-align center
		position relative


//- NEWS
.news
	padding 62px 0 87px
	&__inner
		display flex
		-webkit-justify-content space-between
		justify-content space-between
		-webkit-align-items center
		align-items center
	h2
		margin-bottom 33px

.news-item
	display flex
	-webkit-justify-content space-between
	justify-content space-between
	-webkit-align-items flex-start
	align-items flex-start
	width calc(50% - 10px)
	transition all .3s ease
	cursor default
	&:hover
		box-shadow 0px 0px 12px rgba(0, 0, 0, 0.25)
	&__img
		min-width 160px
		min-height 160px
		height 100%
		display block
		background-position center
		background-repeat no-repeat
		-webkit-background-size cover
		 -o-background-size cover
		 background-size cover
		cursor pointer
	&__info
		padding 8px
	&__date
		margin-bottom 16px
	&__title
		font-weight bold
		margin-bottom 3px
		font-size 1.3rem
		display block
		text-decoration none
		transition opacity .3s ease
		&:hover
			opacity 0.7
	&__desk
		margin-bottom 12px
		line-height 1.4
	&__more
		font-weight bold
		position relative
		padding-right 10px
		transition all .3s ease
		text-decoration none
		border-bottom 1px solid #000
		cursor pointer
		&:after
			content ""
			display block
			position absolute
			width 4px
			height 4px
			right 0px
			top 50%
			transform translateY(-50%) rotate(45deg)
			border-top 1px solid #000
			border-right 1px solid #000
		&:hover
			border-color transparent

