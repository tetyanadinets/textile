@media $sm
	.btns  a
		flex 1
		
	.btn-success
		display block
		margin 0 auto
		width 230px

@media $xs
	.content, .popup
		.btn, .btn-success, .btn-err
			display block
			width 300px
			max-width 100%
			margin 0 auto 10px
			padding 15px
		.btns
			display block
			a
				display block
				width 300px
				max-width 100%
				margin 0 auto 10px