
.preloader {
	position: fixed;
	top: 0;left: 0;
	background: #fff;
	z-index: 9999;
	width: 100%;
	height: 100%;
	color: #fff;
	overflow: hidden;
	font-family: sans-serif;
	display flex
	-webkit-justify-content center
	justify-content center
	-webkit-align-items center
	align-items center
	&.hide {
		opacity: 0;
		transition: 1s;
		transition-delay: .5s;
		pointer-events: none;
	}
	&.remove {
		display: none;
	}

}
