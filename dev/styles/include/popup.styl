body.hidden
	overflow hidden
	.popup
		display block
.popup.show_popup
	visibility visible
	opacity 1

.popup
	position fixed
	z-index 1100
	top 0
	left 0
	width 100%
	height 100%
	background rgba(#fff, .8)
	opacity 0
	display none
	visibility hidden
	transition .5s
	.close 
		position absolute
		bottom 100%
		left 100%
		font-size 30px
		color #000
		cursor pointer
	&__content
		position absolute
		top 20%
		left 50%
		width 770px
		max-width 100%
		min-height 320px
		display flex
		align-items center
		justify-content center
		flex-direction column
		transform translateX(-50%)
		padding 50px 80px
		background #ececec
		text-align center
	